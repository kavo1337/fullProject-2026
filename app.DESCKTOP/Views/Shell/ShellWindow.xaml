<Window x:Class="app.DESCKTOP.Views.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.DESCKTOP.Views.Shell"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="VS - Главная" Height="720" Width="1280"
        WindowState="Maximized"
        Icon="/Views/Assets/Logo.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{StaticResource SidebarBackground}">
            <DockPanel Margin="12">
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock x:Name="NavHeader" Text="Навигация" Foreground="#9AA4B2" FontSize="12" Margin="4,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="4,0,0,14">
                        <Image Source="/Views/Assets/Logo.png" Height="55" x:Name="LogoImage"/>
                       
                    </StackPanel>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="OpenDashboard_Click">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="18" Height="18" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/home.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock x:Name="MenuTextDashboard" Text="Главная" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="OpenMonitoring_Click">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="18" Height="18" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/monitor.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock x:Name="MenuTextMonitoring" Text="Монитор ТА" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="ShowPlaceholder_Click" Tag="Детальные отчеты">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="18" Height="18" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/reports.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock x:Name="MenuTextReports" Text="Детальные отчеты" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Click="ShowPlaceholder_Click" Tag="Учет ТМЦ">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle Width="18" Height="18" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/inventory.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <TextBlock x:Name="MenuTextInventory" Text="Учет ТМЦ" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock x:Name="AdminHeader" Text="Администрирование" Foreground="#9AA4B2" FontSize="12" Margin="4,16,0,8"/>
                    <StackPanel x:Name="AdminSection">
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="OpenAdminVendingService_Click">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="18" Height="18" Fill="White">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="/Views/Assets/Icons/admin.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock x:Name="MenuTextAdmin" Text="Торговые автоматы" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="ShowPlaceholder_Click">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="18" Height="18" Fill="White">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="/Views/Assets/Icons/Details2.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock x:Name="MenuTextСompany" Text="Компании" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="ShowPlaceholder_Click">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="18" Height="18" Fill="White">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="/Views/Assets/Icons/Signal5.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock x:Name="MenuTextModem" Text="Модемы" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="ShowPlaceholder_Click">
                            <StackPanel Orientation="Horizontal">
                                <Rectangle Width="18" Height="18" Fill="White">
                                    <Rectangle.OpacityMask>
                                        <ImageBrush ImageSource="/Views/Assets/Icons/user.png" Stretch="Uniform"/>
                                    </Rectangle.OpacityMask>
                                </Rectangle>
                                <TextBlock x:Name="MenuTextUsers" Text="Пользователи" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Background="{StaticResource PageBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="48"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="{StaticResource TopbarBackground}" Grid.Row="0">
                <DockPanel Margin="12,0">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Button Width="32" Height="32" Click="ToggleSidebar_Click" Background="Transparent" BorderThickness="0">
                            <Rectangle Width="16" Height="16" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/bars.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <TextBlock Text="ООО Торговые Автоматы" Foreground="White" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center" Margin="8,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Border x:Name="PhotoPlaceholder" Width="34" Height="34" Background="#3A3F46" CornerRadius="17" Margin="0,0,8,0">
                            <TextBlock x:Name="UserInitialsText" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Image x:Name="UserPhoto" Width="34" Height="34" Margin="0,0,8,0" Visibility="Collapsed"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock x:Name="UserNameText" Foreground="White" FontWeight="SemiBold"/>
                            <TextBlock x:Name="UserRoleText" Foreground="#9AA4B2" FontSize="12"/>
                        </StackPanel>
                        <Button x:Name="ProfileButton" Width="28" Height="28" Margin="6,0,0,0" Click="ProfileButton_Click" Background="Transparent" BorderThickness="0">
                            <Rectangle Width="14" Height="14" Fill="White">
                                <Rectangle.OpacityMask>
                                    <ImageBrush ImageSource="/Views/Assets/Icons/angle-down.png" Stretch="Uniform"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Tag="Мой профиль" Click="ShowPlaceholder_Click">
                                        <MenuItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Views/Assets/Icons/user.png" Width="14" Height="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="Мой профиль"/>
                                            </StackPanel>
                                        </MenuItem.Header>
                                    </MenuItem>
                                    <MenuItem Tag="Мои сессии" Click="ShowPlaceholder_Click">
                                        <MenuItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Views/Assets/Icons/clock-o.png" Width="14" Height="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="Мои сессии"/>
                                            </StackPanel>
                                        </MenuItem.Header>
                                    </MenuItem>
                                    <MenuItem Click="Logout_Click">
                                        <MenuItem.Header>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Views/Assets/Icons/sign-out.png" Width="14" Height="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="Выход"/>
                                            </StackPanel>
                                        </MenuItem.Header>
                                    </MenuItem>
                                </ContextMenu>
                            </Button.ContextMenu>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Background="{StaticResource PageBackground}"/>
        </Grid>
    </Grid>
</Window>
