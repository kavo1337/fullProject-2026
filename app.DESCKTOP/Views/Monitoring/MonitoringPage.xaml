<Page x:Class="app.CLIENT.Views.Monitoring.MonitoringPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app.DESCKTOP.Views.Monitoring"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      Background="{StaticResource PageBackground}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Монитор торговых автоматов" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" Background="White" BorderBrush="#E3E3E3" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,10">
                    <TextBlock Text="Общее состояние" FontWeight="SemiBold" Margin="0,0,12,10"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <Button Padding="7" BorderThickness="0">
                                    <Ellipse Fill="#1FCB7A" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="12,0,12,0">
                                <Button Padding="7" BorderThickness="0">
                                    <Ellipse Fill="#E74C3C" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button Padding="7" BorderThickness="0">
                                    <Ellipse Fill="#F1C40F" Width="20" Height="20"/>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,30,8">
                        <StackPanel>
                            <TextBlock Text="Подключение" FontWeight="SemiBold" Margin="0,0,12,15"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/wifi.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/signal.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/plug.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4">
                                    <Image Source="/Views/Assets/Icons/usb.png" Width="16" Height="16"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <StackPanel Orientation="Vertical">
                        <TextBlock Text="Дополнительные статусы" FontWeight="SemiBold" Margin="0,0,12,15"/>
                            <StackPanel Orientation="Horizontal">
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/exclamation-circle.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/exclamation-triangle.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4" Margin="0,0,6,0">
                                    <Image Source="/Views/Assets/Icons/thermometer-full.png" Width="16" Height="16"/>
                                </Border>
                                <Border Background="#F2F2F2" CornerRadius="4" Padding="4">
                                    <Image Source="/Views/Assets/Icons/unlock.png" Width="16" Height="16"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Margin="20,0,0,0">
                        <TextBlock Text="Сортировка" VerticalAlignment="Center" Margin="0,0,6,15"/>
                        <ComboBox x:Name="SortBox" Width="180" Height="28" Margin="0,0,12,0">
                            <ComboBoxItem Content="По состоянию ТА" IsSelected="True"/>
                            <ComboBoxItem Content="По времени"/>
                        </ComboBox>
                    </StackPanel>
                    
                </StackPanel>

                <WrapPanel VerticalAlignment="Center">
                    <TextBlock Text="Состояние" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="StatusBox" Width="160" Height="28" Margin="0,0,12,0">
                        <ComboBoxItem Content="" IsSelected="True"/>
                        <ComboBoxItem Content="Работает"/>
                        <ComboBoxItem Content="Не работает"/>
                        <ComboBoxItem Content="На обслуживании"/>
                    </ComboBox>

                    <TextBlock Text="Тип подключения ID" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBox x:Name="ConnectionTypeBox" Width="80" Height="28" Margin="0,0,12,0"/>

                    <TextBlock Text="Доп. статус" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <ComboBox x:Name="AdditionalBox" Width="160" Height="28" Margin="0,0,12,0">
                        <ComboBoxItem Content="" IsSelected="True"/>
                        <ComboBoxItem Content="None"/>
                        <ComboBoxItem Content="Door open"/>
                        <ComboBoxItem Content="Temperature high"/>
                        <ComboBoxItem Content="Payment error"/>
                    </ComboBox>

                    

                    <Button Content="Применить" Height="28" Margin="0,0,6,0" Click="Apply_Click"/>
                    <Button Content="Очистить" Height="28" Click="Clear_Click"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="White" BorderBrush="#E3E3E3" BorderThickness="1" CornerRadius="6" Padding="6">
            <Grid>
                <DataGrid x:Name="MonitoringGrid"
                      AutoGenerateColumns="False"
                      ItemsSource="{Binding Rows}"
                      CanUserSortColumns="True"
                      IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№" Binding="{Binding RowNumber}" Width="50"/>
                        <DataGridTextColumn Header="ТП" Binding="{Binding TA}" Width="140"/>

                        <DataGridTemplateColumn Header="Связь" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#1FCB7A"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Connection}" Value="Offline">
                                                            <Setter Property="Fill" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Connection}" Value="Weak">
                                                            <Setter Property="Fill" Value="#F1C40F"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding Connection}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Загрузка" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/reports.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Load}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Денежные средства" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/dollar.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Cash}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="События" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/bell.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Events}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Оборудование" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/admin.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Equipment}" Foreground="Green" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Информация" Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/info-circle.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Info}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Доп." Width="140">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/VWSR.Desktop;component/Assets/Icons/exclamation-circle.png" Width="14" Height="14" Margin="0,0,6,0"/>
                                        <TextBlock Text="{Binding Additional}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Время" Binding="{Binding Time}" Width="120"/>
                        <DataGridTextColumn Header="Баланс" Binding="{Binding AccountBalance}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock x:Name="EmptyText" Text="Нет данных" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed" FontSize="16" Foreground="Gray"/>
            </Grid>
        </Border>

        <StackPanel Grid.Row="3" Margin="0,15,0,0" Orientation="Horizontal">
            <TextBlock x:Name="TotalCountText" FontWeight="Bold" Margin="0,0,10,0"/>
            <TextBlock x:Name="TotalCashText" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>
