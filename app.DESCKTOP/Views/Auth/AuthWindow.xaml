<Window x:Class="app.DESCKTOP.Views.Auth.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app.DESCKTOP.Views.Auth"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="500"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/Views/Assets/Logo.png">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Image Source="/Views/Assets/Logo.png" Height="100"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="ЛОГИН" FontSize="15"/>
            <TextBox x:Name="LoginBox" Text="test@mail.com" Height="30" VerticalContentAlignment="Center"/>
            <TextBlock Text="ПАРОЛЬ" FontSize="15"/>
            <PasswordBox x:Name="PasswordBox" Password="test" Height="30" VerticalContentAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="2">
            <Button x:Name="ButtonLogin" Content="ВОЙТИ" Height="30" Margin="0,0,0,10" Click="LoginButton_Click"/>
            <TextBlock x:Name="Statusbar" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
